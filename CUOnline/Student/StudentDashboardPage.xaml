<Page x:Class="CUOnline.StudentDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CUOnline"
      mc:Ignorable="d"
      d:DesignHeight="720"
      d:DesignWidth="1250"
      Title="StudentDashboardPage">

    <Grid Background="{StaticResource WhiteColour}">
        <Label Content="Registered Courses List"
               Style="{StaticResource Heading1Style}"
               Margin="50 20 0 0" />

        <StackPanel Height="500"
                    Margin="0 0 0 75"
                    VerticalAlignment="Bottom"
                    Width="1100">
            <DataGrid x:Name="tbl_courses" Height="500"
                      d:ItemsSource="{d:SampleData ItemCount=5}"
                      Background="White"
                      BorderBrush="{x:Null}"
                      FontSize="18"
                      VerticalContentAlignment="Center"/>

        </StackPanel>
    </Grid>
</Page>
