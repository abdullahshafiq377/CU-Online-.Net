<Window x:Class="CUOnline.AdminSearchTeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CUOnline"
        mc:Ignorable="d"
        Title="AdminSearchTeacherWindow"
        Height="400"
        Width="600"
        Topmost="True"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Label Content="Teacher ID:"
                   Style="{StaticResource BodyText2Style}"
                   Margin="150 100 0 0" />

            <TextBox Style="{StaticResource TextBoxStyle}"
                     Width="300"
                     HorizontalAlignment="Left"
                     Margin=" 150 5 0 0" />

            <Button x:Name="SearchStudentButton"
                    Content="Search"
                    Margin="75"
                    Style="{StaticResource PrimaryButtonStyle}"
                    />
        </StackPanel>
    </Grid>
</Window>
